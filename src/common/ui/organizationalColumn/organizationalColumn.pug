mixin organizationalColumn(options)
  -const {title, num, step, }= options || {};

  section.organizational-column(class!= attributes.class)
    .title-row 
      block
      h2.organizational-column-title= title 
    .num-row 
      span.num.anime-text(data-value= num, data-step= step) 0
      .text physical
    .num-row 
      span.num 1
      .text virtual
