          img(src=require('../../assets/svg/mainScreen/engagementGrants1.svg'))
          img.img-last(src=require('../../assets/svg/mainScreen/engagementGrants2.svg'))
        //- RESEARCH GRANTS
      +mainScreenCard({
        title: 'Research Grants', 
        color: '#FFE4C1'
        })(class="main-card-big toResearchGrants")
        .research-grants-row
          img(src=require('../../assets/svg/mainScreen/researchGrants.svg'))
          img.img-last(src=require('../../assets/svg/mainScreen/researchGrants2.svg'))
      +mainScreenCard({
        title: 'Policy Research Grants', 
        color: '#FFE4C1'
        })(class="main-card toPolicyGrant")
        img(src=require('../../assets/svg/mainScreen/policyGrants.svg'))
      //- RESEARCH CAPACITY
      +mainScreenCard({
        title: 'Research - Capacity Building Curations', 
        color: '#D6EDFF'
        })(class="main-card toResearchCuration")
        .research-capacity-row
          img.first-img(src=require('../../assets/svg/mainScreen/capacityCuration1.svg'))
          img.last-img(src=require('../../assets/svg/mainScreen/capacityCuration2.svg'))
      +mainScreenCard({
        title: 'Research Promotion, Networking & Outreach', 
        color: '#D6EDFF'
        })(class="main-card-big toResearchNetworking")
        .research-networking-card
          .card-chart
            each val, index in [{color: '#F36D20', percent: '37%'}, {color: '#F36D20', percent: '24%'}, {color: '#FFAA4D', percent: '16%'}, {color: '#FFAA4D', percent: '11%'}, {color: '#FFAA4D', percent: '10%'}, {color: '#569FD6', percent: '2%'},]
              .card-chart-item(style={'width': val.percent, 'background-color': val.color})
          .card-desc
            img(src=require('../../assets/svg/mainScreen/researchNetworking1.svg'))
            img(src=require('../../assets/svg/mainScreen/researchNetworking2.svg'))
      +mainScreenCard({
        title: 'Pilot Projects', 
        color: '#FFE1D0'
        })(class="main-card-big toPilotProjects")
        .pilot-projects-card 
          img(src=require('../../assets/svg/mainScreen/pilotProjects1.svg'))
          img(src=require('../../assets/svg/mainScreen/pilotProjects2.svg'))
      +mainScreenCard({
        title: 'Assigned Projects',
        color: '#FFE1D0'
