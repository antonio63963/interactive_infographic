        })(class="main-card toMathCuration")
        img(src=require('../../assets/svg/mainScreen/mathCuration.svg'))
      +mainScreenCard({
        title: 'Science Dissemination - Grants', 
        color: '#FFE4C1'
        })(class="main-card toScienceGrant")
        img(src=require('../../assets/svg/mainScreen/scienceGrants.svg'))
      +mainScreenCard({
        title: 'Science Dissemination - Curation', 
        color: '#D6EDFF'
        })(class="main-card toScienceCuration")
        img(src=require('../../assets/svg/mainScreen/scienceCuration.svg'))
        //- ENGAGEMENT
      +mainScreenCard({
        title: 'Engagement in Science (Grants)', 
        color: '#FFE4C1'
        })(class="main-card-big toEngagementScience")
