            ul.persons-lis
              li.persons-list-item Dr. Abdullah AI ShebliDr.
              li.persons-list-item Abdullah Sultan
           
          +smallPrizeRow({
            title: 'Al-Sumait Prize 2022 winners',
            color: 'orange'
          })(class= "orange-prize")
          +smallPrizeRow({
            title: 'Kuwait Prize 2022 winners',
            color: 'yellow'
          })
      +mainScreenCard({
        title: 'KFAS Social Media', 
        color: '#FFE4C1'
        })(class="main-card-big toKfasMedia")  
        +appTab({actveColor: '#BE4EF9', id:"card-media-tab"})(class="active kfas-card-tab")
          img(src=require("../../assets/svg/mainScreen/insta.svg"))
        img.chart(src=require("../../assets/svg/mainScreen/kfasMediaChart.svg"))
      +mainScreenCard({
        title: 'Organizational Development Projects', 
        color: '#FFE1D0'
        })(class="main-card-big toOrganizationalProjects")  
        .organizational-projects-card-row
          img(src=require("../../assets/svg/mainScreen/organizationalProjects1.svg"))
          img.last-child(src=require("../../assets/svg/mainScreen/organizationalProjects2.svg"))
        



          

